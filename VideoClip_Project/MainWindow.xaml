<Window x:Class="VideoClip_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoClip_Project"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#272537">
        <Grid>

            <Button Content="LogIn" FontSize="25" HorizontalAlignment="Left" Margin="750,34,0,0" VerticalAlignment="Top" Foreground="White" Background="Black" Height="45" Width="122" Click="BtnLogIn"/>
            <Button Content="SignUp" FontSize="25" HorizontalAlignment="Left" Margin="600,34,0,0" VerticalAlignment="Top" Background="Black" Foreground="#FFFAFAFA" Height="45" Width="122" Click="BtnSignUp"/>
            <Label Content="Clipakia" FontSize="50" HorizontalAlignment="Left" Margin="70,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.169,-0.345" Foreground="#FFFF9300" FontWeight="Bold"/>

        </Grid>
    </Border>

</Window>
